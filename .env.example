# Application
NODE_ENV=development
PORT=3000

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_API_VERSION=v1
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Backend Configuration
API_PORT=3001
MONGODB_URI=mongodb://localhost:27017/thriftx
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=7d

# Authentication
NEXT_PUBLIC_AUTH_COOKIE_NAME=thriftx_auth
NEXT_PUBLIC_AUTH_COOKIE_MAX_AGE=30
SESSION_SECRET=your_session_secret

# Stripe Configuration
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Cloudinary Configuration
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password
EMAIL_FROM=noreply@thriftx.com

# Google Analytics
NEXT_PUBLIC_GA_TRACKING_ID=your_ga_tracking_id

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_STRIPE=true
NEXT_PUBLIC_ENABLE_CLOUDINARY=true

# Redis Configuration (for caching)
REDIS_URI=redis://localhost:6379

# Site Information
NEXT_PUBLIC_SITE_NAME=ThriftX
NEXT_PUBLIC_SITE_DESCRIPTION=Your one-stop shop for sustainable fashion
NEXT_PUBLIC_SITE_EMAIL=support@thriftx.com

# Security
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100 